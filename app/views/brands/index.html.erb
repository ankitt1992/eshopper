<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= render '/components/left_sidebar'%>
      </div>

      <div class="category-tab"><!--category-tab-->
        <% if @brand.present? %>
          <div class="col-sm-12">
            <ul class="nav nav-tabs">
                <li class='active'>
                  <a><%= @brand.name %></a>
                </li>
            </ul>
          </div>
        <% end %>

        <div>
        <%if @brand.present? %>
          <div>
            <% if @products.present? %>
              <% @products.each do |product|%>
                <div class="col-sm-3">
                  <div class="product-image-wrapper product_style">
                    <div class="single-products">
                      <div id="wishlist-status-<%= product.id%>">
                        <%= render partial: 'wishlists/wishlist', locals:{product: product}%>
                      </div>
                      <div class="productinfo text-center">
                        <%= link_to product_path(product) do %>
                          <%if product.pictures.present?%>
                            <div class="image-width">
                              <%= image_tag product.pictures.first.image.product.url%>
                            </div>
                          <% end %>
                            <h2>&#8377; <%= product.price%></h2>
                            <p class="product_name_height"><%= product.name%></p>
                        <% end %>
                        
                        <div id="product-cart-status-<%= product.id%>">
                          <%= render partial:'/cart_items/product_cart_status', locals:{product: product}%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div>
                <h2><center>Product not available</center></h2>
              </div>
            <% end %>
          </div>
        <% end %>
        </div>
      </div><!--/category-tab-->

    </div>
  </div>
</section>