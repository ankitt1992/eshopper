<section id="slider"><!--slider-->
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div id="slider-carousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% @banners.each_with_index do |banner, i| %>
              <%= content_tag :li,'', data: {target: '#slider-carousel', slide_to: i}, class: ('active' if i==0) %> 
            <%end %>
          </ol>

          <div class="carousel-inner">
            <% @banners.each_with_index do |banner, i| %>
              <div class="item <%= ('active' if i==0) %>">
                <div class="col-sm-6">
                  <h1><%= banner.title %></h1>
                  <p><%= banner.description%> </p>
                  <button type="button" class="btn btn-default get">Get it now</button>
                </div>
                <div class="col-sm-6">
                  <%= image_tag(banner.image, class: 'girl img-responsive')%>
                  <img src="assets/home/pricing.png"  class="pricing" alt="" />
                </div>
              </div>
             <% end %>
          </div>

          <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
            <i class="fa fa-angle-left"></i>
          </a>
          <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
            <i class="fa fa-angle-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</section><!--/slider-->