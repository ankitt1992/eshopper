<div class="recommended_items"><!--recommended_items-->
  <h2 class="title text-center">recommended items</h2>
  
  <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <%= @recommended_products.each_slice(3).with_index do |slice, i|%>
        <div class="item <%= ('active' if i==0) %> "> 
          <% slice.each_with_index do |recommended_product,j|%>
            <div class="col-sm-4">
              <div class="product-image-wrapper">
                <div class="single-products">
                  <div class="productinfo text-center">
                    <%= link_to product_path(recommended_product) do %>
                      <% if recommended_product.pictures.present?%>
                        <%= image_tag recommended_product.pictures.first.image.url, width: "150px", height: "220px"%>
                      <% end %>
                      <h2>&#8377; <%= recommended_product.price%></h2>
                      <p><%= recommended_product.name%></p>
                    <% end %>
                    <div id="product-cart-status-<%= recommended_product.id%>">
                      <%= render partial:'/cart_items/product_cart_status', locals:{product: recommended_product}%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
    <i class="fa fa-angle-left"></i>
    </a>
    <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
    <i class="fa fa-angle-right"></i>
    </a>      
  </div>
</div><!--/recommended_items-->